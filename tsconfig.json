{
  "compilerOptions": {
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "public/src/**/*",
    "src/**/*", 
    "test/**/*",
  ],
  "exclude":[
    "node_modules",
  ]
}